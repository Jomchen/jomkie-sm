<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jomkie.sm.mapper.UserMapper">

    <sql id="Base_Column_List">
        id,
        create_time,
        update_time,
        name, age, sex, email, real_name
    </sql>

    <select id="findAll" resultType="com.jomkie.sm.entity.User">
        SELECT * FROM jo_user WHERE age BETWEEN #{beginAge} AND #{endAge} AND sex = #{sex}
    </select>

    <select id="findCondition" resultType="com.jomkie.sm.entity.User">
        SELECT * FROM jo_user
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="beginAge != null">
                AND age &gt;= #{beginAge}
            </if>
            <if test="endAge != null">
                AND age &lt;= #{endAge}
            </if>
            <if test="sex != null">
                AND sex = #{sex}
            </if>
        </trim>
    </select>

</mapper>
